{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "js": true
    }
  },
  "plugins": [ "react" ],
  "rules": {
    "semi": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  }
}